<%= form_for Answer.new, :url => answers_path, :html => {:method => :post} do |f| %>
  <p class="whiteify centerize main-text">
    <%= raw @question.spanish.gsub("_____", f.text_field(:user_answer, autofocus: true, class: "blueify", size: "12")) %> <strong>(<%= @question.hint %>)</strong>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :question_id, :value => @question.id %>
    <%= f.submit "Check", class: "btn btn-lg btn-success centerize check-answer" %>
  </p>
<% end %>

<% if @question.tense %>
  <p class="whiteify centerize supporting-text"><%= @question.tense.titleize %> Tense</p>
<% end %>

<br />
<br />
<br />
<br />

<div class="container">
  <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
    aria-valuemin="0" aria-valuemax="100" style="width:<%= @exam.percent_complete %>%">
      <%= @exam.percent_complete %>% Complete
    </div>
  </div>

  <p class="whiteify centerize supporting-text">Progress goes up for correct answers and down for incorrect answers</p>
</div>

