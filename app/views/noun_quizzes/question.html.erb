<p class="whiteify centerize main-text">the <%= @noun.english %></p>
<%= form_for @noun_answer do |f| %>
  <p class="whiteify centerize main-text">
    <%= f.text_field :user_answer, placeholder: "Answer", autofocus: true, class: "blueify", size: [@correct_answer.length + rand(1..5), 8].max %>
    <%= f.hidden_field :noun_quiz_id, value: params[:id] %>
    <%= f.hidden_field :correct_answer, value: @correct_answer %>
    <%= f.submit "Submit Answer", class: "btn btn-lg btn-success centerize check-answer" %>
  </p>
<% end %>

