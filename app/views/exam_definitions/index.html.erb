<div class="row col-md-4 col-md-offset-4">
  <% @definitions.each do |definition| %>
    <p>
      <%= link_to definition.exam_name, set_exam_definition_path(exam_definition_id: definition.id), method: :post, class: "btn btn-lg btn-success centerize" %>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= definition.exam_percent_complete(current_user) %>%">
          <%= definition.exam_percent_complete(current_user) %>% Complete
        </div>
      </div>
    </p>

    <% unless definition == @definitions.last %>
      <i class="centerize fa fa-arrow-down fa-2x fa-inverse"></i>
    <% end %>
  <% end %>
</div>

